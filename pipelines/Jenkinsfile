// email notifications

pipeline {
    agent any

    environment {
        imageName = "custom"
        imageTag  = "v1"
        registryCredentials = "dockerhub_id"
        emailAdresses = ["eevvggbbeerr@gmail.com"]
    }

    // triggers {
    //     githubPush()
    //     cron('*/15 * * * *')
    // }

    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }

    stages {
        stage('SCM') {
            steps {
                sh '''
                git clone https://github.com/HighLandner/docker_agent.git
                ls -la
                '''
            }
        }
        stage('Docker build'){
            steps {
                script {
                    sh '''
                    pwd
                    '''
                    dockerImage = docker.build("${env.imageName}:${env.imageTag}")
                }
            }
        }
        stage('Docker push'){
            steps {
                script {
                    docker.withRegistry('', registryCredentials){
                        dockerImage.push()
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs deleteDirs: true
        }
        failure {
            emailext body: '${JOB_NAME} status failed',
                subject: 'Job execution status',
                to: emailAdresses
        }
        success {
            emailext body: '${JOB_NAME} status successed',
                subject: 'Job execution status',
                to: emailAdresses
        }
    }
}
